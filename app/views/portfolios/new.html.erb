<h1>Add new recipe</h1>

<%= form_for @portfolio_item do |f| %>
  <div>
    <%= f.text_field :title, placeholder: "Title" %>
  </div>
  <div>
    <%= f.text_field :description, placeholder: "Description" %>
  </div>
  <div>
    <%= f.text_area :body, placeholder: "Write here..." %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end  %>