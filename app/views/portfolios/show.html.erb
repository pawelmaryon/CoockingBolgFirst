<div class="container">
  <div class="row">
    <div class="show-image col-4">
      <%= image_tag (@portfolio_item.main_image.url), class:'image-size' unless @portfolio_item.main_image.nil?%>
    </div>
    <div class="show-content col-8">
      <h1><%= @portfolio_item.title %></h1>
      <h5><%= @portfolio_item.description %></h5>
      <p><%= @portfolio_item.body %></p>
    </div>
  </div>
  <div class="row utility-links">
    <div class="col-6">
      <%= link_to 'Edit', (edit_portfolio_path(@portfolio_item)), class:'btn btn-success btn-block' if logged_in?(:site_admin) %></div>
    <div class="col-6">
      <%= link_to 'Remove', (portfolio_path(@portfolio_item)), class:'btn btn-danger btn-block', method: :delete, data: {confirm: "Are you sure?"} if logged_in?(:site_admin)%>
    </div>
  </div>
</div>
 