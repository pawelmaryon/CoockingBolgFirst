<h1>Chickory</h1>

<% @soya_items.each do |item| %>
  <h2><%= link_to item.title, portfolio_show_path(item) %></h2>
  <h5><%= item.description %></h5>
  <p><%= item.body %></p>
  <%= image_tag item.thumb_image unless item.thumb_image.nil?%>
  <%= link_to 'Edit', edit_portfolio_path(item) %>
  <hr>
  <% end %>