


<div class="album py-5">
  <div class="container shadow-outline">  
    <div class="row">
      <% @portfolio_items.each do |item| %>
      <div class="col-sm-4">
        <div class="card mb-4 shadow-sm">
          <%= link_to portfolio_show_path(item) do %>
            <%= image_tag portfoilo_img(item.thumb_image.url, 'thumb'), class: 'index-card-width'%>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


