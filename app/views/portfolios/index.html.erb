
<h1>Portfolio</h1>
  <div class="album py-5">
    <div class="container">
      <div class="row">
        <% @portfolio_items.each do |item| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <%= link_to portfolio_show_path(item) do %>
              <%= image_tag (item.thumb_image unless item.thumb_image.nil?), class: 'index-card-width'%>
                <div class="card-body">
                  <h5><%= link_to item.title, portfolio_show_path(item), class:'card-text card-header' %></h5>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <%= link_to 'Edit', (edit_portfolio_path(item)), class:'btn btn-sm btn-outline-light #{active? new_portfolio_path}' if logged_in?(:site_admin) %>
                    </div>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>

  <hr>
