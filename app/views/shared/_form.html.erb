
<div class="container container-form">
  <%= form_for @portfolio_item do |f| %>
    <div class="row">
      <div>
        <div>
          <%= f.text_field :title, placeholder: "Title", class: 'form-width' %>
        </div>
        <div>
          <%= f.text_field :description, placeholder: "Description", class: 'form-width' %>
        </div>
        <div class="form-width">
        <label class="btn btn-outline-success btn-block">Upload Main Image<%= f.file_field :main_image, style:"display:none" %></label>
        </div>
        <div class="form-width">
          <label class="btn btn-outline-secondary btn-block">Upload Thumb Image<%= f.file_field :thumb_image, style:"display:none" %></label>
        </div>
      </div>
      <div>
        <div>
          <%= f.text_area :body, placeholder: "Write here...", class: 'form-width form-body' %>
        </div>
      </div>
    </div>
    <div>
      <%= f.submit 'Subbmit', class:'btn btn-success btn-block'%>
    </div>
  <% end  %>
</div>